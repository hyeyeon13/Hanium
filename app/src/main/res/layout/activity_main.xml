<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DFDF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bars" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:text="보디가드"
            android:textSize="25sp"
            android:fontFamily="@font/font3"
            android:textColor="#ff000000"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="#AEACAC" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/font3"
        android:text="★즐겨찾기"
        android:textSize="25sp"
        android:textColor="#ff000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText4"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#ff000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="#90000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/editText4"
            android:layout_toRightOf="@+id/editText4"
            android:background="@drawable/border"
            android:fontFamily="@font/font3"
            android:text="수정/등록"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText6"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20sp"
            android:backgroundTint="#ff000000"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/editText6"
            android:layout_toRightOf="@+id/editText6"
            android:background="@drawable/border"
            android:fontFamily="@font/font3"
            android:text="수정/등록"
            android:textColor="#ff000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText5"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20sp"
            android:backgroundTint="#ff000000"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/editText5"
            android:layout_toRightOf="@+id/editText5"
            android:background="@drawable/border"
            android:fontFamily="@font/font3"
            android:text="수정/등록"
            android:textColor="#ff000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/font3"
            android:text="▶메뉴"
            android:textColor="#ff000000"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pathsetting"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:background="#00ff0000"
            android:fontFamily="@font/font3"
            android:text="경로 설정"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/guardian"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/pathsetting"
            android:background="#00ff0000"
            android:fontFamily="@font/font3"
            android:text="보호자 등록"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/pathinput"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/guardian"
            android:layout_toRightOf="@+id/guardian"
            android:background="#00ff0000"
            android:fontFamily="@font/font3"
            android:text="이동경로 입력"
            android:textColor="#ff000000"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>